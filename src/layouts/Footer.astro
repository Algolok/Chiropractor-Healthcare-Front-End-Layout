    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
        }
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }
        @media (max-width: 768px) {
            .container {
                padding-left: 0;
                padding-right: 0;
            }
        }
